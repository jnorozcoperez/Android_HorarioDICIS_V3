<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:showDividers="middle">

    <TextView
        android:id="@+id/tbxHoraSem"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center_vertical|start"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tbxUnidadAprendizaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tbxAreaUDA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/tbxClave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11sp"
                tools:ignore="SmallSp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tbxLun"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center_vertical|center_horizontal|center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tbxMar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center_vertical|center_horizontal|center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tbxMie"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center_vertical|center_horizontal|center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tbxJue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center_vertical|center_horizontal|center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tbxVie"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center_vertical|center_horizontal|center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tbxSab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center_vertical|center_horizontal|center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tbxAula"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center_vertical|center_horizontal|center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tbxProfesor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

</LinearLayout>